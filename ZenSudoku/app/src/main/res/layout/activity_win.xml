<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fi.tamk.tiko.seppalainen.toni.zensudoku.WinActivity">

    <TextView
        android:id="@+id/win_message"
        android:text="@string/win_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/win_go_back_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/win_message_size"
        app:layout_constraintVertical_bias="0.4"
        android:textColor="@color/colorPrimary"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <Button
        android:id="@+id/win_go_back_button"
        android:text="@string/win_screen_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/win_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:onClick="goBack"

        />


</android.support.constraint.ConstraintLayout>
